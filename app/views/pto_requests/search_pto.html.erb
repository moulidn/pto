<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" href="/resources/demos/style.css">
<%= form_for(@pto) do |f| %>
<table>
  <tr>
    <td>Employee Name</td>
    <td>  <%= select_tag  "emp_name", options_for_select(@emp_name), :prompt => "Select Employee" %></td>
    <td>Employee Id</td>
    <td> <%= f.text_field :emp_id ,{:id=>'txtEmpId'} %></td>
    <td>PTO Date</td>
    <td> <%= f.text_field :pto_dt ,{:id=>'txtPtoDate'} %></td>
    <td><%= f.submit 'Search' %></td>
  </tr>
</table>
<% end %>
<table style="border: 1px solid">

  <tr style="background: #CCCCCC;">
    <th>Employee Name</th>
    <th>Employee Code</th>
    <th>Pto Date</th>
  </tr>
  <% @pto_date.each do |pto| %>
      <tr>
        <td>
          <%= pto.Emp_Name %>
        </td>
        <td>
          <%= pto.emp_no %>
        </td>
        <td>
          <%= pto.pto_date %>
        </td>
      </tr>
  <% end -%>
</table>

<script>
    $(document).ready(function(){
        $("#txtPtoDate").datepicker({
            dateFormat: 'yy-mm-dd',
            numberOfMonths: 1
        });
    });
</script>