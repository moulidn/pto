<h1>Listing employees</h1>

<table class="table" style="width: 50%;">
  <thead>
    <tr>
      <th>Emp no</th>
      <th>Emp name</th>
      <th>Emp email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.emp_no %></td>
        <td><%= employee.emp_name %></td>
        <td><%= employee.emp_email %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Employee', new_employee_path %>

<%= link_to 'New Leave Requests', new_leave_request_path %>

<%= link_to 'View Leave Requests', delete_leave_leave_requests_path %>
